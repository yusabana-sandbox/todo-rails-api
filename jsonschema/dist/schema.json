{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "type": [
    "object"
  ],
  "definitions": {
    "todo": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Todo",
      "description": "Todo リソース",
      "stability": "prototype",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "id": {
          "description": "ユニークなID",
          "readOnly": true,
          "example": 34,
          "type": [
            "integer"
          ]
        },
        "title": {
          "description": "タイトル",
          "readOnly": true,
          "example": "タイトル サンプル",
          "type": [
            "string"
          ]
        },
        "body": {
          "description": "内容",
          "readOnly": true,
          "example": "内容 サンプル",
          "type": [
            "string"
          ]
        },
        "created_at": {
          "description": "when todo was created",
          "format": "date-time",
          "example": "2015-01-01T12:00:00Z",
          "type": [
            "string"
          ]
        },
        "updated_at": {
          "description": "when todo was updated",
          "format": "date-time",
          "example": "2015-01-01T12:00:00Z",
          "type": [
            "string"
          ]
        },
        "todo": {
          "description": "todo",
          "properties": {
            "id": {
              "$ref": "#/definitions/todo/definitions/id"
            },
            "title": {
              "$ref": "#/definitions/todo/definitions/title"
            },
            "body": {
              "$ref": "#/definitions/todo/definitions/body"
            }
          },
          "type": [
            "object"
          ]
        }
      },
      "links": [
        {
          "description": "Todoの内容をすべて取得する。",
          "href": "/todos",
          "method": "GET",
          "rel": "object",
          "targetSchema": {
            "properties": {
              "todos": {
                "items": {
                  "$ref": "#/definitions/todo/definitions/todo"
                },
                "type": [
                  "array"
                ]
              }
            },
            "type": [
              "object"
            ]
          },
          "title": "一覧"
        },
        {
          "description": "idで指定したTodoの情報を取得する。",
          "href": "/todos/{(%23%2Fdefinitions%2Ftodo%2Fdefinitions%2Fid)}",
          "method": "GET",
          "rel": "self",
          "targetSchema": {
            "properties": {
              "todo": {
                "$ref": "#/definitions/todo/definitions/todo"
              }
            },
            "type": [
              "object"
            ]
          },
          "title": "詳細"
        },
        {
          "description": "リクエストされたタイトルと内容でTodo作成する。",
          "href": "/todos",
          "method": "POST",
          "rel": "create",
          "schema": {
            "properties": {
              "title": {
                "$ref": "#/definitions/todo/definitions/title"
              },
              "body": {
                "$ref": "#/definitions/todo/definitions/body"
              }
            },
            "required": [
              "title"
            ],
            "type": [
              "object"
            ]
          },
          "targetSchema": {
            "properties": {
              "todo": {
                "$ref": "#/definitions/todo/definitions/todo"
              }
            },
            "type": [
              "object"
            ]
          },
          "title": "新規作成"
        },
        {
          "description": "idで指定したTodoの情報を更新する。",
          "href": "/todos/{(%23%2Fdefinitions%2Ftodo%2Fdefinitions%2Fid)}",
          "method": "PATCH",
          "rel": "update",
          "schema": {
            "properties": {
              "title": {
                "$ref": "#/definitions/todo/definitions/title"
              },
              "body": {
                "$ref": "#/definitions/todo/definitions/body"
              }
            },
            "required": [
              "title"
            ],
            "type": [
              "object"
            ]
          },
          "targetSchema": {
            "properties": {
              "todo": {
                "$ref": "#/definitions/todo/definitions/todo"
              }
            },
            "type": [
              "object"
            ]
          },
          "title": "更新"
        },
        {
          "description": "指定したidのTodoを削除する",
          "href": "/todos/{(%23%2Fdefinitions%2Ftodo%2Fdefinitions%2Fid)}",
          "method": "DELETE",
          "rel": "destroy",
          "response_example": {
            "head": "HTTP/1.1 204 No Content",
            "body": "No body"
          },
          "title": "Delete"
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/todo/definitions/id"
        },
        "title": {
          "$ref": "#/definitions/todo/definitions/title"
        },
        "body": {
          "$ref": "#/definitions/todo/definitions/body"
        }
      }
    },
    "user_token": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "User Token(JWT)",
      "description": "tokenを発行する",
      "stability": "prototype",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "username": {
          "description": "ユーザ名",
          "readOnly": true,
          "example": "yusabana",
          "type": [
            "string"
          ]
        },
        "password": {
          "description": "パスワード",
          "readOnly": true,
          "example": "password",
          "type": [
            "string"
          ]
        },
        "auth": {
          "description": "認証時のパラメータ",
          "readOnly": true,
          "properties": {
            "username": {
              "$ref": "#/definitions/user_token/definitions/username"
            },
            "password": {
              "$ref": "#/definitions/user_token/definitions/password"
            }
          },
          "type": [
            "object"
          ]
        },
        "jwt": {
          "description": "Json Web Token",
          "readOnly": true,
          "example": "eyJ0eXAiOiJKV1QiLCJhbaciOiJIUzI1NiJ9.eyJleHAiOjE0NzIxghlwNDUsInN1eiI6Nn0.eJlwj1-gzvajsX8o-I8YjUuHw-5s8sZ4kzgMR4FP0DU",
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "description": "ユーザが存在すればJWTトークンを生成する、ユーザが存在しなければユーザを作成しJWTトークンを生成する。",
          "href": "/user_token",
          "method": "POST",
          "rel": "create",
          "schema": {
            "properties": {
              "auth": {
                "$ref": "#/definitions/user_token/definitions/auth"
              }
            },
            "required": [
              "auth"
            ],
            "type": [
              "object"
            ]
          },
          "type": [
            "object"
          ],
          "title": "トークン生成"
        }
      ],
      "properties": {
        "jwt": {
          "$ref": "#/definitions/user_token/definitions/jwt"
        }
      }
    }
  },
  "properties": {
    "todo": {
      "$ref": "#/definitions/todo"
    },
    "user_token": {
      "$ref": "#/definitions/user_token"
    }
  },
  "description": "Todo API インターフェース仕様",
  "id": "todo_api",
  "title": "Todo API v1",
  "links": [
    {
      "href": "http://localhost:3000",
      "rel": "self"
    }
  ]
}
